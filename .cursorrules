        e.preventDefault()
        setFocusedIndex(i => Math.max(i - 1, 0))
        break
      case 'Enter':
      case ' ':
        e.preventDefault()
        selectRow(focusedIndex)
        break
      case 'Escape':
        clearSelection()
        break
    }
  }

  return (
    <div
      role="grid"
      onKeyDown={handleKeyDown}
      tabIndex={0}
      aria-label="Data grid"
    >
      {data.map((item, index) => (
        <div
          key={item.id}
          role="row"
          aria-selected={index === focusedIndex}
          tabIndex={index === focusedIndex ? 0 : -1}
        >
          <Row item={item} />
        </div>
      ))}
    </div>
  )
}
```

